<%= bootstrap_form_for(@user, :html=> { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <label for="first name" class="control-label col-md-3">First Name</label>
    <div class="col-md-9">
      <%= f.text_field :first_name, placeholder: 'First Name', class: "form-control", hide_label: true, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="last name" class="control-label col-md-3">Last Name</label>
    <div class="col-md-9">
      <%= f.text_field :last_name, placeholder: 'Last Name', class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="control-label col-md-3">Email</label>
    <div class="col-md-9">
      <%= f.email_field :email, class: "form-control", hide_label: true, placeholder: 'Email' %>
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="control-label col-md-3">Password</label>
    <div class="col-md-9">
      <%= f.password_field :password, class: "form-control", hide_label: true, placeholder: 'Password' %>
    </div>
  </div>

  <div class="form-group">
    <label for="password_confirmation" class="control-label col-md-3">Password Confirmation</label>
    <div class="col-md-9">
      <%= f.password_field :password_confirmation, class: "form-control", hide_label: true, placeholder: 'Confirm the password' %>
    </div>
  </div> 

  <div><hr></div>

  <%= f.fields_for :addresses do |address| %>
    <div class="form-group">
    <label for="address_line1" class="control-label col-md-3">Address 1</label>
    <div class="col-md-9">
      <%= address.text_field :address_line1, class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="address_line2" class="control-label col-md-3">Address 2</label>
    <div class="col-md-9">
      <%= address.text_field :address_line2, class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="city" class="control-label col-md-3">City</label>
    <div class="col-md-9">
      <%= address.text_field :city, class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="zipcode" class="control-label col-md-3">zipcode</label>
    <div class="col-md-9">
      <%= address.text_field :zipcode, class: "form-control", hide_label: true %>
    </div>
  </div>

  <% end %>
  <div class="form-group">
    <div class="col-md-offset-3">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>