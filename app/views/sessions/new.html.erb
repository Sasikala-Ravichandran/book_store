<%= bootstrap_form_for(:session, url: login_path, :html=> { class: "form-horizontal" }) do |f| %>

  <div class="form-group">
    <label for="email" class="control-label col-md-3">Email</label>
    <div class="col-md-9">
      <%= f.email_field :email, placeholder: 'Email', class: "form-control", hide_label: true, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="password" class="control-label col-md-3">Password</label>
    <div class="col-md-9">
      <%= f.password_field :password, placeholder: 'Password', class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-3">
      <%= f.submit "Sign In", class: "btn btn-primary" %>
    </div>
  </div>

  <%= link_to "Forgot your password", new_password_reset_path %>
<% end %>