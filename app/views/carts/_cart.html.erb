<section>
  <div class='row'>
    <div class='col-md-10 col-md-offset-1'>
      <header>
        <h3 class="titles text-center" id="book-show">Your Shopping Cart</h3>
      </header>

      <div class="cart-items">
        <%= render cart.cart_items %>
      </div>
      <hr>
      <div class="cart-total">
        <strong> Total: </strong><%= number_to_currency(@cart.total_sale) %>
      </div>
      <div class="clear-cart-btn">
        <%= button_to "Clear Cart", cart_path(@cart), method: :delete, 
                                  data: { confirm: "Are you sure" }, 
                                  class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</section>