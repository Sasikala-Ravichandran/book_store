<%= bootstrap_form_for([:admin, @book], :html=> { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <label for="title" class="control-label col-md-3">Title</label>
    <div class="col-md-9">
      <%= f.text_field :title, placeholder: 'Title of the book', class: "form-control", hide_label: true, autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="isbn" class="control-label col-md-3">ISBN</label>
    <div class="col-md-9">
      <%= f.text_field :isbn, placeholder: 'Book ISBN', class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="control-label col-md-3">Description</label>
    <div class="col-md-9">
      <%= f.text_area :description, class: "form-control", hide_label: true, placeholder: 'Description' %>
    </div>
  </div>

  <div class="form-group">
    <label for="page_count" class="control-label col-md-3">Page Count</label>
    <div class="col-md-9">
      <%= f.text_field :page_count, class: "form-control", hide_label: true, placeholder: 'Number of Pages' %>
    </div>
  </div>

  <div class="form-group">
    <label for="price" class="control-label col-md-3">Price</label>
    <div class="col-md-9">
      <%= f.text_field :price, class: "form-control", hide_label: true, placeholder: 'Book unit of price' %>
    </div>
  </div>

  <div class="form-group">
    <label for="published_at" class="control-label col-md-3">Publication Date</label>
    <div class="col-md-9">
      <%= f.text_field :published_at, placeholder: 'Publication Date', class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="book_cover" class="control-label col-md-3">Book Cover</label>
    <div class="col-md-9">
      <%= f.file_field :book_cover, placeholder: 'Book Cover', class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="publishers" class="control-label col-md-3">Publisher</label>
    <div class="col-md-9">
      <%= f.select :publisher_id, @publishers.map { |p| [p.name, p.id] }, prompt: 'Select a publisher', class: "form-control", hide_label: true %>
    </div>
  </div>

  <div class="form-group">
    <label for="authors" class="control-label col-md-3">Authors</label>
    <div class="col-md-9">
      <%= f.collection_check_boxes :author_ids, @authors, :id, :full_name, class: "form-control", hide_label: true %> 
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-3">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>