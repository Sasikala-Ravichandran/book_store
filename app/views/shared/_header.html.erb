<header>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "BOOKSTORE", root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="navbar navbar-nav">
        <li class="active"><%= link_to "Home", root_path %></li>
        <%= form_tag(search_catalogs_path, class: "navbar-form navbar-left", role: "search") do %>
          <div class="form-group">
            <%= text_field_tag :search_word, nil, placeholder: "Search for book here", class: "form-control" %>
          </div>
          <%= submit_tag "Search", class: "btn btn-default"%>
        <% end %>
        <li><%= link_to "Catalogs", catalogs_path %></li>
        <% if current_user && current_user.admin? %>
          <li><%= link_to "Authors", admin_authors_path %></li>
          <li><%= link_to "Books", admin_books_path %></li>
          <li><%= link_to "Users", users_path %></li>
        <% end %>
        
        
        <% unless current_user %>
          <li><%= link_to "Sign Up", new_user_path %></li>
          <li><%= link_to "Login", login_path %></li>
        <% else %>
          <li><%= link_to "Logout", logout_path, method: "delete" %></li>
        <% end %>
      </ul>
      </div>
    </div>
  </nav>
</header>