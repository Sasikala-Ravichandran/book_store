<section>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h3 class="text-center">Forgotten your Password?</h3><br>
      <p class="col-md-offset-3"> Enter your email address and click on 'Reset Password'
      button to get a mail to reset the password</p><br>

      <%= bootstrap_form_tag(url: password_resets_path, :html=> { class: "form-horizontal" }) do |f| %>

        <div class="form-group">
          <label for="email_address" class="control-label col-md-3">Email Address</label>
          <div class="col-md-7">
            <%= f.email_field :email, placeholder: 'Email', class: "form-control", hide_label: true, autofocus: true, id: "email_address" %>
          </div>
        </div>

        <div class="form-group actions control-group">
          <div class="col-md-offset-3">
            <%= f.submit "Reset Password", class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</section>

