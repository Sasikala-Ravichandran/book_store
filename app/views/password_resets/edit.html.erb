<section>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= bootstrap_form_for(@user, url: password_reset_path(params[:id]), :html=> { class: "form-horizontal" }) do |f| %>
        <h3> Reset Your Password</h3>
        <div class="form-group">
          <label for="password" class="control-label col-md-3">New Password</label>
          <div class="col-md-7">
            <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>
          </div>
        </div>

        <div class="form-group actions control-group">
          <div class="col-md-offset-3">
            <%= f.submit "Reset Password", class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</section>
