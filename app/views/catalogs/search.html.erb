<article>
  <div class="row">
    <% @books.each do |book| %>
      <label class="col-md-9">
        <%= link_to book.title, book %>
      </label>
      <div>
        <%= link_to image_tag(book.book_cover_url(:thumb)), book %>
      </div>
      <hr class="col-md-9">
    <% end%>
  </div>
</article>